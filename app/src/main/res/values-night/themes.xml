<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema base para modo oscuro -->
    <style name="Theme.MiAlarma" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Colores de superficie -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        
        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
        
        <!-- Colores de error -->
        <item name="colorError">@color/error_dark</item>
        <item name="colorOnError">@color/black</item>
        
        <!-- Colores de borde -->
        <item name="colorOutline">@color/outline_dark</item>
        
        <!-- Estado de la barra de sistema -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Estilo de navegaciÃ³n -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Ripple -->
        <item name="colorControlHighlight">@color/ripple_dark</item>
    </style>
</resources> 